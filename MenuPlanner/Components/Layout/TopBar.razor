@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="topbar-container">
    <div class="logo-wrapper">
        <img src="images/branding/logo200x150.png" @onclick="GoHome" class="logo" alt="MenuPlanner logo" />
    </div>
    <div class="searchform-wrapper">
        <SearchForm />
    </div>
    <div class="userbutton-wrapper">
        <UserButtons />
    </div>
