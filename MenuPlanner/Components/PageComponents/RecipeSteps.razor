<h4>Fremgangsmåte</h4>
@if (StepList.Count > 0)
{
    <ol>
        @for (int i = 0; i < StepList.Count; i++)
        {
            <li>
                @if (StepList[i].Image != null)
                {
                    <img src="/images/recipes/@(RecipeUrl)/@($"{RecipeUrl}-{i+1}").jpg" />
                }
                @StepList[i].Text
            </li>
        }
    </ol>
}

@code {
    [Parameter]
    public required List<RecipeStepDisplayDTO> StepList { get; set; }

    [Parameter]
    public required string RecipeUrl { get; set; }
}
